{
  "name": "Naifu-telegram-local-bot",
  "version": "1.0.0",
  "type": "module",
  "description": "Naifu telegram bot with local environment",
  "main": "./src/index.js",
  "author": "Anthony Wong <nakagame02@gmail.com>",
  "license": "ISC",
  "baseUrl": "./",
  "scripts": {
    "build": "tsc && set NODE_ENV=build&& nodemon --experimental-specifier-resolution=node ./build/index.js",
    "start": "set NODE_ENV=dev&& ts-node --experimental-specifier-resolution=node ./src/index.ts",
    "mon": "set NODE_ENV=dev&& nodemon --experimental-specifier-resolution=node ./src/index.ts"
  },
  "dependencies": {
    "@types/lodash": "^4.14.186",
    "@types/node": "^18.11.4",
    "chalk": "4.1.2",
    "dotenv": "^16.0.3",
    "eslint": "^8.25.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "node-fetch": "^3.2.10",
    "rxjs": "^7.5.7",
    "telegraf": "^4.10.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.20",
    "typescript": "^4.9.0-dev.20221024"
  },
  "nodemonConfig": {
    "ignore": [
      "**/test/**",
      "**/docs/**",
      "**/saved_setting.json"
    ],
    "delay": 2500
  }
}
